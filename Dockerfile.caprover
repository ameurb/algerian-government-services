FROM node:18-alpine

# Install OpenSSL and other required libraries for Prisma
RUN apk add --no-cache openssl openssl-dev

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install all dependencies (including dev dependencies for build)
RUN npm ci

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Seed database with services
RUN npx tsx prisma/enhanced_seed.ts

# Build Next.js application
RUN npm run build

# Copy static assets for standalone mode
RUN cp -r .next/static .next/standalone/.next/static

# Expose ports
EXPOSE 3030 8081

# Set environment
ENV NODE_ENV=production
ENV PORT=3030
ENV MCP_SERVER_PORT=8081

# Create startup script to run both services
RUN echo '#!/bin/sh\necho "🇩🇿 Starting Algerian Services..."\necho "🔧 Starting MCP Server..."\nnpm run mcp:http &\necho "🌐 Starting Next.js App..."\nnode .next/standalone/server.js' > /app/start.sh
RUN chmod +x /app/start.sh

# Start both Next.js and MCP server
CMD ["/app/start.sh"]